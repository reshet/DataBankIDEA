<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.st
		{
			margin-left: 30px;
		}
		.st2
		{
			margin-left: 20px;
			margin-right: 15px;
		}
		.padded{
   			 padding-left: 30px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTMLPanel styleName="{style.st}">
			<div class="column640">
			  <h2 class="yellow"><g:Label ui:field="name"/></h2>
	          <div class="column560">
	          		<g:HorizontalPanel width="100%">
<!-- 	          			<g:Label ui:field="author" text="Автор: " horizontalAlignment="ALIGN_RIGHT" styleName="{style.st2} gray50"></g:Label> -->
	          			<g:Label ui:field="date" text="Дата: " horizontalAlignment="ALIGN_RIGHT" styleName="{style.st2} gray50"></g:Label>
	          		</g:HorizontalPanel>
	                <p class="gray25">
							<g:HTML ui:field="html">
							</g:HTML>
					</p>
				</div>
				<div class="dark-yellow">
				<g:HorizontalPanel spacing="10" horizontalAlignment="ALIGN_RIGHT" width="100%">
					<g:HorizontalPanel ui:field="link_panel"></g:HorizontalPanel>
					<g:Anchor ui:field="show_meta" text="Дополнительная информация" styleName="{style.padded}"></g:Anchor>
				</g:HorizontalPanel>
				</div>
			</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
