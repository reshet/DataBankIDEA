<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
			.padded{
   			 padding-left: 30px;
		}
			.padded15{
   			 padding-left: 15px;
		}
		.st2
		{
			margin-left: 20px;
			margin-right: 15px;
		}
		.padded_bot
		{
			padding-bottom: 15px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTMLPanel>
	        <g:Anchor ui:field="name"></g:Anchor>
         	<div class="column560 {style.padded_bot}">
         		    <g:HorizontalPanel width="100%">
<!-- 	          			<g:Label ui:field="author" text="Автор: " horizontalAlignment="ALIGN_RIGHT" styleName="{style.st2} gray50"></g:Label> -->
	          			<g:Label ui:field="date" text="Дата: " horizontalAlignment="ALIGN_RIGHT" styleName="{style.st2} gray50"></g:Label>
	          		</g:HorizontalPanel>
                <p class="gray25">
						<span><g:HTML ui:field="html">
						</g:HTML>
						<a class="more"><g:Anchor ui:field="show_deeper" text="Подробнее"></g:Anchor> &rarr;</a>
						</span>
				</p>
				</div>
				<div class="dark-yellow right">
				<g:HorizontalPanel spacing="10" horizontalAlignment="ALIGN_RIGHT" width="100%">
					<g:HorizontalPanel ui:field="link_panel"></g:HorizontalPanel>
					<g:Anchor ui:field="show_meta" text="Дополнительная информация" styleName="{style.padded}"></g:Anchor>
				</g:HorizontalPanel>
				</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
