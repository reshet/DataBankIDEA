<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.category
		{
			font-weight: bold;
			font: 15px;
			vertical-align: text-top;
		}
		.tableResearch
		{
			font-weight: normal;
			padding: 2px;
			margin-left: 15px;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="field_name" styleName="{style.category}"></g:Label>
<!-- 			<g:Anchor ui:field="edit">редактировать</g:Anchor> -->
			<g:PushButton ui:field="editBtn" height="28px" width="28px"></g:PushButton>
		</g:HorizontalPanel>
		<g:FlexTable ui:field="subunits_table" styleName="{style.tableResearch}"></g:FlexTable>
	</g:HTMLPanel>	
</ui:UiBinder> 