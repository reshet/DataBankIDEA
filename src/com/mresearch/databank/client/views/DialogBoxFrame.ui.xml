<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			max-width: 700px;
		}
		.left{
			margin-left: 7px; 
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.important}">
		<h3 class="green {style.left}"><g:Label ui:field="header"></g:Label></h3>
		<g:VerticalPanel width="100%" height="100%" spacing="4">
			<g:VerticalPanel width="100%" height="100%" ui:field="contents"></g:VerticalPanel>
		    <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT">
					<g:Button text="Закрыть" ui:field="button"/>
		    	</g:HorizontalPanel>
		    </g:HorizontalPanel>
		</g:VerticalPanel> 
	</g:HTMLPanel>
</ui:UiBinder> 