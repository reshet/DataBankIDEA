<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:views="urn:import:com.mresearch.databank.client.views">
	<ui:style>
		.research-catalog {
			font:10px;
			padding: 2px;
			margin: 1 1 1 1;
		}
		
	</ui:style>
	<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
	<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
			<g:VerticalPanel ui:field="leftPanel" width="300px" height="100%">
				<g:HTMLPanel>
					<div class="column280">
						<h2 class="yellow">Последние публикации</h2>
						<hr/>
						<g:FlexTable ui:field="lastPubs"></g:FlexTable>
						<br/>
						<h2 class="black">Рубрики</h2>
						<hr/>
						<g:FlexTable ui:field="topics"></g:FlexTable>
					</div>
				</g:HTMLPanel>
			</g:VerticalPanel>
			<g:VerticalPanel width="10px" height="100%">
				<g:HTMLPanel>
					<div class="vert_separator"/>
				</g:HTMLPanel>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="centerPanel" width="724px" height="100%" verticalAlignment="ALIGN_TOP">
			</g:VerticalPanel>
	</g:HorizontalPanel>
	<views:WhiteFooter></views:WhiteFooter>
	</g:VerticalPanel>
</ui:UiBinder> 