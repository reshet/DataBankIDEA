						<g:Anchor href="javascript:;" ui:field="mainNav">
							<div class="mm-title">
							</div>
						</g:Anchor>
						<g:Anchor href="javascript:;" ui:field="researchNav">
							<div class="mm-item mm-11 mm-hover">
								<div class="mm-caption" ui:field="researchNavCaption">
								</div>
							</div>
						</g:Anchor>
						<div class="mm-search">
							<g:TextBox ui:field="searchBox" stylePrimaryName="{style.mm-search}" text="Пошук"></g:TextBox>
<!-- 							<g:Button ui:field="searchCmd" styleName="{style.search-submit}"></g:Button> -->
<!-- 							<g:PushButton ui:field="searchBtn" height="32px" width="32px"></g:PushButton> -->
