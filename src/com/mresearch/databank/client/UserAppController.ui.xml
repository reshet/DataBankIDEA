		.mm-search {
		    border: transparent solid 1px;
		    border-radius: 4px;
		    background: transparent;
		    color: #fff;
		    font-family: 'Trebuchet MS', Verdana, Arial, Helvetica;
		    font-size: 14px;
		    font-weight: bold;
		    padding: 3px;
		}
		.mm-search-highlight{ 
		    border-color: #696969; 
		    background: transparent url(i/search-submit.png) right center no-repeat;
		}
		.mm-search-hovering{ 
		    border-color: #696969; 
		    background: transparent url(i/search-submit.png) right center no-repeat;
		}
		.search-submit {
		    position: absolute;
		    right: 11px;
		    bottom: 6px;
		    width: 20px;
		    height: 20px;
		    cursor: pointer;
		}
