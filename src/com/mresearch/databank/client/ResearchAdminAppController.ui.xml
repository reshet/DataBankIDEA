<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.loginfo{
			text-align: left;
			padding-left: 5px;
			color: graytext;
			font: bold;
			font-size: 11pt;
		}

		.login{
			text-align: right;
			padding-left: 200px;
			color: silver;
			font: bold;
		}
	</ui:style>
	<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HTMLPanel>
				<div id = "mm">
					<div class="mm-container">
						<g:Anchor href="javascript:;" ui:field="bankNav">
							<div class="mm-item mm-21 mm-hover">
								<div class="mm-caption">
									Редактирование исследований
								</div>
							</div>
						</g:Anchor>
						<g:Anchor href="javascript:;" ui:field="startupNav">
							<div class="mm-item mm-41 mm-hover">
								<div class="mm-caption">
									Содержание главной страницы
								</div>
							</div>
						</g:Anchor>
	
					<table><tr>
						<td><g:Label ui:field="username" styleName="{style.loginfo}"></g:Label></td>
						<td>	
						<g:Anchor href="javascript:;" ui:field="logoutNav" styleName="{style.login}" horizontalAlignment="ALIGN_RIGHT">
									<div class="{style.login}">
										Выйти
									</div>
						</g:Anchor>
						</td>
					</tr></table>
					</div>
				
				
				</div>
				
<!-- 			</g:HorizontalPanel> -->
			</g:HTMLPanel>
			<g:HTMLPanel>
	        <!-- спэйсер -->
	        <div style="height: 10px; clear:both; position: relative;"></div>
	        <!-- спэйсер -->
			</g:HTMLPanel>
			<g:VerticalPanel ui:field="centerPanel" width="100%" height="100%">
<!-- 				<g:HTMLPanel> -->
<!-- 					<p>SOS!</p> -->
<!-- 				</g:HTMLPanel> -->
			</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 